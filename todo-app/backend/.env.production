# Production Environment Variables
# Copy this to .env and fill in your values

# MongoDB Connection (use your production MongoDB URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name

# JWT Secret (MUST be changed in production - use a strong random string)
JWT_SECRET=your-production-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Server Config
PORT=5000
NODE_ENV=production

# Frontend URL (for CORS - replace with your deployed frontend URL)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
